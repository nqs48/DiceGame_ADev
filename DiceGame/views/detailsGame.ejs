<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ðŸŽ² Dice Game</title>
    <link href="/stylesheets/styles.css" rel="stylesheet" />
  </head>
  <body>
    <nav class="bg-gradient-to-r from-fuchsia-700/30 to-green-400">
      <div class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8">
        <div class="relative flex items-center justify-between h-28">
          <div
            class="absolute inset-y-0 left-0 flex items-center sm:hidden"
          ></div>
          <div class="flex-1 flex items-center justify-center">
            <a href="/">
              <div class="flex-shrink-0 flex items-center">
                <img
                  class="block lg:hidden h-8 w-auto"
                  src="https://res.cloudinary.com/adev48/image/upload/v1652572560/Sofka%20Assets/Semana%204/dice_xxdudh.png"
                  alt="Workflow"
                />
                <img
                  class="hidden lg:block h-20 w-20"
                  src="https://res.cloudinary.com/adev48/image/upload/v1652572560/Sofka%20Assets/Semana%204/dice_xxdudh.png"
                  alt="Workflow"
                />
              </div>
            </a>

            <div class="hidden sm:block sm:ml-6">
              <div class="flex space-x-4">
                <a
                  href="/createGame"
                  class="text-white hover:bg-green-800 hover:text-white px-10 py-6 rounded-md text-sm font-medium"
                  aria-current="page"
                  >Create Game</a
                >

                <a
                  href="/error"
                  class="text-white hover:bg-green-800 hover:text-white px-10 py-6 rounded-md text-sm font-medium"
                  >Players</a
                >

                <a
                  href="/findGame"
                  class="text-white hover:bg-green-800 hover:text-white px-10 py-6 rounded-md text-sm font-medium"
                  >Find Game</a
                >

                <a
                  href="/games"
                  class="text-white hover:bg-green-800 hover:text-white px-10 py-6 rounded-md text-sm font-medium"
                  >Games</a
                >
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Mobile menu, show/hide based on menu state. -->
      <div class="sm:hidden" id="mobile-menu">
        <div class="px-2 pt-2 pb-3 space-y-1">
          <!-- Current: "bg-gray-900 text-white", Default: "text-gray-300 hover:bg-gray-700 hover:text-white" -->
          <a
            href="/createGame"
            class="text-gray-300 hover:bg-gray-800 hover:text-white block px-3 py-2 rounded-md text-base font-medium"
            aria-current="page"
            >Create Game</a
          >

          <a
            href="/error"
            class="text-gray-300 hover:bg-gray-800 hover:text-white block px-3 py-2 rounded-md text-base font-medium"
          >
            Players</a
          >

          <a
            href="/findGame"
            class="text-gray-300 hover:bg-gray-800 hover:text-white block px-3 py-2 rounded-md text-base font-medium"
            >Find Game</a
          >

          <a
            href="/games"
            class="text-gray-300 hover:bg-gray-800 hover:text-white block px-3 py-2 rounded-md text-base font-medium"
            >Games</a
          >
        </div>
      </div>
    </nav>
    <% if (!error) { %>
    <div
      class="mx-auto min-h-full w-4/5 flex-row justify-center items-center py-12 px-4 sm:px-6 lg:px-8"
    >
      <div>
        <div
          class="px-5 py-3 border-b-2 border-gray-200 bg-gray-200 text-center text-xs font-semibold text-gray-600 uppercase tracking-wider"
        >
          Game ID : <%=game._id %>
        </div>
      </div>
      <table
        class="flex-row min-w-full leading-normal justify-center items-center"
      >
        <thead>
          <tr>
            <th
              class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider"
            >
              Id Players
            </th>
            <th
              class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider"
            >
              Name
            </th>
            <th
              class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider"
            >
              Age
            </th>
          </tr>
        </thead>
        <tbody>
          <% if (game.gamers.length > 0) { %> <% game.gamers.forEach(element =>
          { %>
          <tr>
            <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
              <div class="flex items-center">
                <div class="ml-3">
                  <p class="text-gray-900 whitespace-no-wrap">
                    <%= element._id %>
                  </p>
                </div>
              </div>
            </td>
            <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
              <p class="text-gray-900 whitespace-no-wrap">
                <%= element.name %>
              </p>
            </td>
            <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
              <p class="text-gray-900 whitespace-no-wrap"><%= element.age %></p>
            </td>
          </tr>
          <% }) %> <% } %>
        </tbody>
      </table>
      <div
        class="relative flex justify-center px-3 py-1 font-semibold text-green-900 leading-tight"
      >
        <span
          aria-hidden
          class="absolute inset-0 bg-green-200 opacity-50 rounded-b-lg"
        ></span>
        <span class="relative">In Progress: <%= game.inProgress %> </span>
      </div>

      <div
        class="bg-green-50 px-4 py-3 text-right sm:px-6 flex justify-between w-2/5 mx-auto my-10"
      >
        <% if (game.inProgress) { %>
        <button
          id="btnPlayGame"
          data-id="<%=game._id %>"
          class="inline-flex justify-center rounded-md border border-transparent bg-green-500 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2"
        >
          Play Game
        </button>
        <% }else{ %>
        <button
          id="btnPlayGame"
          data-id="<%=game._id %>"
          class="inline-flex justify-center rounded-md border border-transparent bg-green-500 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2"
        >
          View Winner
        </button>
        <% } %>
        <button
          id="btnDeleteGame"
          data-id="<%=game._id %>"
          class="inline-flex justify-center rounded-md border border-transparent bg-red-500 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-red-700"
        >
          Delete Game
        </button>
      </div>
    </div>
    <% }else { %>
    <div class="bg-red-200 p-3">Something went wrong</div>
    <a
      href="/"
      class="inline-flex justify-center rounded-md border border-transparent bg-green-500 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2"
    >
      Go Main
    </a>

    <% } %>
    <div class="flex-shrink-0 flex items-center justify-center py-6">
      <img
        class="block lg:hidden h-40 w-40"
        src="https://res.cloudinary.com/adev48/image/upload/v1652573714/Sofka%20Assets/Semana%204/dices_tzeuva.png"
        alt="Workflow"
      />
      <img
        class="hidden lg:block h-40 w-40"
        src="https://res.cloudinary.com/adev48/image/upload/v1652573714/Sofka%20Assets/Semana%204/dices_tzeuva.png"
        alt="Workflow"
      />
    </div>
    <script>
      const btnDeleteGame = document.querySelector("#btnDeleteGame");
      btnDeleteGame.addEventListener("click", async () => {
        console.log("Go to play");
        const id = btnDeleteGame.dataset.id;
        console.log("id: ", id);
        try {
          const data = await fetch(`/deleteGame/${id}`);
          const res = await data.json();
          if (res.estado) {
            //res.render("confirmation")
            window.location.href = "/games";
          } else {
            console.log(res);
          }
        } catch (e) {
          console.log(e);
        }
      });
    </script>
  </body>
</html>
